{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "application1",
      "metadata": {
        "_parameterType": "resourceGroup",
        "description": "このリソースのリソース グループの名前。追跡機能を向上させるため、同じリソース グループにリソースを配置することをお勧めします。"
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "japaneast",
      "metadata": {
        "_parameterType": "location",
        "description": "リソース グループの場所。リソース グループには、リソースとは異なる場所を指定できます。"
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[parameters('resourceGroupLocation')]",
      "metadata": {
        "_parameterType": "location",
        "description": "リソースの場所。既定では、リソース グループの場所が使用されます (リソース プロバイダーがその場所でサポートされていない場合を除く)。"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "apiVersion": "2019-10-01"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('resourceGroupName'), 'Deployment', uniqueString(concat('application1', subscription().subscriptionId)))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[parameters('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "name": "application1",
              "location": "[parameters('resourceLocation')]",
              "type": "Microsoft.DocumentDB/databaseAccounts",
              "kind": "GlobalDocumentDB",
              "systemData": {
                "createdAt": "2021-11-19T14:03:15.6837435Z"
              },
              "properties": {
                "databaseAccountOfferType": "Standard"
              },
              "apiVersion": "2015-04-08"
            }
          ]
        }
      }
    }
  ],
  "metadata": {
    "_dependencyType": "cosmosdb.azure"
  }
}